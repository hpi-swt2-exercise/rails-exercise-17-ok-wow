<h1>Authors</h1>
<table>
    <tr>
      <th>Name</th>
      <th>Homepage</th>
    </tr>
<% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', "/authors/#{author.id}" %></td>
      <td><%= link_to 'Edit', "/authors/#{author.id}/edit" %></td>
      <td><%= link_to 'Destroy', author_path(author),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
<% end %>

</table>
<%= link_to 'Add author', new_author_path %>