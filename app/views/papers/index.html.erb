<h1>Papers</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Venue</th>
    <th>Year</th>
  </tr>
  <% @papers.each do |paper| %>
      <tr>
        <td><%= paper.title %></td>
        <td><%= paper.venue %></td>
        <td><%= paper.year %></td>
        <td><%= link_to 'Show', "/papers/#{paper.id}" %></td>
        <td><%= link_to 'Edit', "/papers/#{paper.id}/edit" %></td>
        <td><%= link_to 'Destroy', paper_path(paper),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>

</table>
<%= link_to 'Add paper', new_paper_path %>